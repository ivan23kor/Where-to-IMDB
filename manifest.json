{
  "name": "IMDb Streaming Availability",
  "description": "Instantly see streaming availability from JustWatch directly on IMDb top charts pages!",
  "version": "1.0",
  "manifest_version": 3,
  "content_scripts": [
    {
      "js": [
        "scripts/content.js"
      ],
      "matches": [
        "https://www.imdb.com/*"
      ]
    }
  ],
  "background": {
    "service_worker": "/scripts/scrape.js",
    "type": "module"
  },
  "host_permissions": [
    "https://www.justwatch.com/*"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "/assets/*"
      ],
      "matches": [
        "https://www.imdb.com/*"
      ]
    }
  ]
}